{
  "scripts": {
    "start": "node server.js\n",
    "dev": "concurrently \"npm run watch-css\" \"npm run start-server\" \"npm run watch-webpack\"\n",
    "start-server": "nodemon server.js\n",
    "build:css": "npx @tailwindcss/cli -i ./src/input.css -o ./public/output.css\n",
    "watch-css": "npx @tailwindcss/cli -i ./src/input.css -o ./public/output.css --watch\n",
    "watch-webpack": "webpack --watch"
  },
  "dependencies": {
    "@fontsource-variable/source-code-pro": "^5.2.5",
    "@tailwindcss/cli": "^4.0.15",
    "nodemon": "^3.1.9",
    "tailwindcss": "^4.0.15"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^13.0.0",
    "html-webpack-plugin": "^5.6.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  }
}
